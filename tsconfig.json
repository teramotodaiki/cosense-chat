{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["script.js", "src/**/*.ts", "src/**/*.d.ts", "test/**/*.d.ts"]
}
